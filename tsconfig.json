{
  "compilerOptions": {
    "target": "es5", // ECMAScript version

    // modules
    // "module": "CommonJS", // 모듈 설정
    "moduleResolution": "node", // 모듈 해석방식

    // path
    "baseUrl": ".", // Non-relative 모듈 혹은 paths 옵션 기준 디렉토리
    "paths": {
      "*": ["*"]
    }, // baseUrl 옵션을 기준디렉토리로 불러올 모듈의 위치설정
    "rootDir": "src/", // 입력할 디렉토리
    "outDir": "dist/", // 출력할 디렉토리
    // "outFile": "", // 단일파일로 출력시 파일명

    // edit outfile
    "charset": "utf8",
    "emitBOM": false,

    // lint
    "noImplicitAny": true,
    "noUnusedLocals": true, // 사용안된 지역변수 오류 보고 여부
    "noUnusedParameters": true, // 사용안된 파라미터 오류 보고 여부
    "noImplicitReturns": true, // 함수의 모든 경로가 값을 반환하지 않으면 에러 발생
    "noStrictGenericChecks": true, // 함수에서 generic의 엄격한 검사 여부 해제

    // log
    "listEmittedFiles": false, // 컴파일된 결과 파일들 이름을 터미널에 출력
    "listFiles": true, // 컴파일 된 파일 이름을 터미널에 출력
    "locale": "ko", // 에러메세지 출력 언어 설정
    "pretty": true // 에러메세지를 예쁘게 설정
  }
}
